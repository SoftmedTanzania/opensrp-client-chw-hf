<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AdvancedSearchFragment">

    <include layout="@layout/toolbar_advanced_search"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:weightSum="1">

        <include
            android:id="@+id/advanced_search_list"
            layout="@layout/advanced_search_list"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_weight="1"/>

        <include
            android:id="@+id/advanced_search_form"
            layout="@layout/advanced_search_form"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_weight="1"/>

        <include
            android:id="@+id/advanced_search_offline"
            layout="@layout/advanced_search_offline"
            android:layout_height="0dp"
            android:layout_width="fill_parent"
            android:layout_weight="1"/>
    </LinearLayout>


</FrameLayout>